<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.*?>

<?import javafx.scene.layout.HBox?>
<VBox xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.ui.DashboardController" spacing="10" alignment="CENTER" >
    <Label fx:id="lblWelcome" styleClass="header"/>
    <TableView fx:id="tblInventory" prefHeight="200" prefWidth="400">
        <columns>
            <TableColumn text="Product ID" />
            <TableColumn text="Name" />
            <TableColumn text="Quantity" />
            <TableColumn text="Price" />
        </columns>
    </TableView>
    <HBox spacing="10">
        <Button fx:id="btnManageProducts" text="Manage Products" onAction="#handleManageProducts" />
        <Button fx:id="btnViewTransactions" text="View Transactions" onAction="#handleViewTransactions" />
    </HBox>
</VBox>